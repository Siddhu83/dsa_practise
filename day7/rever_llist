class ListNode:
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next

def reverse_between(head, left, right):
    if not head or left == right:
        return head
    start = ListNode(0)
    start.next = head
    prev = start

    for _ in range(left - 1):
        prev = prev.next

    current = prev.next
    for _ in range(right - left):
        temp = current.next
        current.next = temp.next
        temp.next = prev.next
        prev.next = temp

    return start.next